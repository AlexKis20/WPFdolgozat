<Window x:Class="_1.feladat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1.feladat"
        mc:Ignorable="d"
        Title="Struktúra használata" Height="350" Width="400">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Label
            Content="Szám1"
            Margin="30 30 0 0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="16"
            Height="auto"
            Width="auto"
            />
        <TextBox
            x:Name="tbx_szam1"
            Text=""
            Width="130"
            Height="25"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="16"
            Margin="30 60 0 0"
            />


        <Label
            Content="Szám2"
            Margin="220 30 0 0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="16"
            Height="auto"
            Width="auto"
            />
        <TextBox
            x:Name="tbx_szam2"
            Text=""
            Width="130"
            Height="25"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="16"
            Margin="225 60 0 0"
            />

        <Label
            Content="Mértani közép:"
            Margin="30 130 0 0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="16"
            Height="auto"
            Width="auto"
            />
        <TextBox
            x:Name="tbx_mertaniK"
            Text=""
            Width="200"
            Height="25"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="16"
            Margin="30 160 0 0"
            />

        <Label
            Content="Számtani közép:"
            Margin="30 190 0 0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="16"
            Height="auto"
            Width="auto"
            />
        <TextBox
            x:Name="tbx_szamtaniK"
            Text=""
            Width="200"
            Height="25"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="16"
            Margin="30 220 0 0"
            />

        <Button
            x:Name="bt_szamol"
            Content="Számol"
            Width="100"
            Height="30"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="16"
            Margin="250 270 0 0"
            FontWeight="DemiBold" Click="bt_szamol_Click"
            />

    </Grid>
</Window>
